@page
@model Los_Pollos_Hermanos_Web_App.Pages.Menuitems.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Menu Items</h1>

<!--Creates a prompt for users to click on to create new items in the database-->
<p>
    <a asp-page="Create">Create New Item</a>
</p>

<!--Creates a search bar at the top of the database-->
<form class="example" action="/action_page.php">
    <input type="text" placeholder="Search.." name="search">
    <button type="submit"><i class="fa fa-search"></i></button>
</form>


<!--Creates a table displaying all items in the database-->=
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem[0].FoodID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem[0].MenuItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem[0].ItemDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem[0].Price)
            </th>
            <th>
             Database
            </th>
        </tr>
    </thead>
    <tbody>

        <!--Allows users to add information to the database-->
@foreach (var item in Model.MenuItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FoodID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <!--Crud functionality-->
                <a asp-page="./Edit" asp-route-id="@item.MenuItemID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MenuItemID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MenuItemID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
